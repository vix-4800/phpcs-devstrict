parameters:
    level: 8
    paths:
        - src
        - tests

    excludePaths:
        - vendor

    bootstrapFiles:
        - phpstan-bootstrap.php

    scanDirectories:
        - vendor/squizlabs/php_codesniffer/src

    # Report all errors
    reportUnmatchedIgnoredErrors: true
    checkMissingCallableSignature: true

    # Additional checks
    treatPhpDocTypesAsCertain: false
