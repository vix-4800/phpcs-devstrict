<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    name="DevStrict">
    <description>DevStrict Coding Standard - Main ruleset</description>

    <rule ref="DevStrict.ControlStructures.DisallowThrowInTernary">
        <type>error</type>
    </rule>

    <rule ref="DevStrict.ControlStructures.UseInArray">
        <type>warning</type>
    </rule>

    <rule ref="DevStrict.Formatting.MethodChainingIndentation">
        <type>warning</type>
    </rule>

    <rule ref="DevStrict.Formatting.MethodChainingPerLine">
        <type>warning</type>
    </rule>

    <rule ref="DevStrict.Formatting.ConsistentStatementIndentation">
        <type>warning</type>
    </rule>

    <rule ref="DevStrict.Formatting.DisallowConsecutivePhpTags">
        <type>warning</type>
    </rule>

    <rule ref="DevStrict.Yii2.DisallowResponseFormatAssignment">
        <type>warning</type>
    </rule>

    <rule ref="DevStrict.Yii2.PreferActiveRecordShortcuts">
        <type>warning</type>
    </rule>

    <rule ref="DevStrict.Yii2.PreferExistsOverCount">
        <type>warning</type>
    </rule>

    <rule ref="DevStrict.Yii2.PreferIsGuestOverUserIdCheck">
        <type>warning</type>
    </rule>

    <rule ref="DevStrict.Yii2.PreferIdentityOverFindOne">
        <type>warning</type>
    </rule>

    <rule ref="DevStrict.Objects.DisallowVariableStaticProperty">
        <type>warning</type>
    </rule>

    <rule ref="DevStrict.Attributes.ForbiddenAttributes">
        <type>warning</type>
        <properties>
            <property name="forbiddenAttributes" type="array">
                <element value="ArrayShape" />
                <element value="JetBrains\PhpStorm\ArrayShape" />
                <element value="Pure" />
                <element value="JetBrains\PhpStorm\Pure" />
                <element value="Deprecated" />
                <element value="JetBrains\PhpStorm\Deprecated" />
            </property>
        </properties>
    </rule>

    <rule ref="DevStrict.Functions.PreferModernStringFunctions">
        <type>warning</type>
    </rule>

    <rule ref="DevStrict.Functions.PreferJsonValidate">
        <type>warning</type>
    </rule>

    <rule ref="DevStrict.Formatting.DisallowMultipleThrowsPerLine">
        <type>warning</type>
    </rule>
</ruleset>
