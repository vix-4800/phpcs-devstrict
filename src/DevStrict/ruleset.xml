<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    name="DevStrict">
    <description>DevStrict Coding Standard - Main ruleset</description>

    <rule ref="DevStrict.Functions.DisallowIsNull">
        <type>warning</type>
    </rule>

    <rule ref="DevStrict.ControlStructures.DisallowThrowInTernary">
        <type>error</type>
    </rule>

    <rule ref="DevStrict.Functions.DisallowCompact">
        <type>error</type>
    </rule>

    <rule ref="DevStrict.ControlStructures.UseInArray">
        <type>warning</type>
    </rule>

    <rule ref="DevStrict.Yii2.DisallowResponseFormatAssignment">
        <type>warning</type>
    </rule>
</ruleset>
